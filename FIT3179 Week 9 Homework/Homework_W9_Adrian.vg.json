{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 450,
  "title": {"text": "CO2 Emmissions 2021", "frame": "group"},
  "style": "view",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/4driancb/FIT3179/main/FIT3179%20Week%209%20Homework/Datasets/CO2Emission_by_country_clean.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "geojson",
          "fields": ["longitude", "latitude"],
          "signal": "layer_2_geojson_0"
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"],
          "as": ["layer_2_x", "layer_2_y"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Total\"]) && isFinite(+datum[\"Total\"]) && isValid(datum[\"Per Capita\"]) && isFinite(+datum[\"Per Capita\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {
        "signal": "[data('source_0'), data('source_1'), layer_2_geojson_0]"
      },
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "lightgray"},
          "stroke": {"value": "white"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "fill": {"value": null},
          "stroke": {"value": "lightgray"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_2_marks",
      "type": "symbol",
      "style": ["circle"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "tooltip": {
            "signal": "{\"Country:\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Total CO2 Emmission (kt):\": format(datum[\"Total\"], \"\")}"
          },
          "fill": {"scale": "color", "field": "Total"},
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"longitude: \" + (format(datum[\"longitude\"], \"\")) + \"; latitude: \" + (format(datum[\"latitude\"], \"\")) + \"; Total CO2 Emission (kt): \" + (format(datum[\"Total\"], \"\")) + \"; Magnitude (CO2 per capita): \" + (format(datum[\"Per Capita\"], \"\")) + \"; Country:: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Total CO2 Emmission (kt):: \" + (format(datum[\"Total\"], \"\"))"
          },
          "x": {"field": "layer_2_x"},
          "y": {"field": "layer_2_y"},
          "size": {"scale": "size", "field": "Per Capita"},
          "shape": {"value": "circle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_2", "field": "Total"},
      "range": {"scheme": "reds"},
      "interpolate": "hcl",
      "zero": false
    },
    {
      "name": "size",
      "type": "linear",
      "domain": [4, 8],
      "range": [9, 361],
      "zero": false
    }
  ],
  "legends": [
    {
      "title": "Total CO2 Emission (kt)",
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "encode": {"gradient": {"update": {"opacity": {"value": 0.7}}}}
    },
    {
      "title": "Magnitude (CO2 per capita)",
      "size": "size",
      "symbolType": "circle",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "black"},
            "fillOpacity": {"value": 0.7},
            "opacity": {"value": 0.7},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {}
}